@model SantiyeTakipOtomasyon.Models.Siniflar.Tedarikci

<div class="container p-2 bg-dark text-white">
    <form action="@Url.Action("TedarikciEkle", "Tedarikci")" method="post">
        <div class="modal-header">
            <h5 class="modal-title">Tedarikçi Girişi</h5>
        </div>
        <br />
        <div style="margin-left:70px">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" st>Tedarikçi Kod</label>
                <div class="col-sm-9">
                    <input style="width:75px;" type="text" class="form-control" name="TedKod" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Firma/Şahıs</label>
                <div class="col-sm-9">
                    <input style="width:400px;" type="text" class="form-control" name="TedFirma" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">İlgili Kişi</label>
                <div class="col-sm-9">
                    <input style="width:300px;" type="text" class="form-control" name="TedIlgiliKisi" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Adres</label>
                <div class="col-sm-9">
                    <input style="width:400px;" type="text" class="form-control" name="TedAdres" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">İl</label>
                <div class="col-sm-9">
                    @Html.DropDownListFor(x => x.IllerId, (List<SelectListItem>)ViewBag.iList, "------- Seçiniz -------", new { @class = "form-control", @style = "width:200px" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">İlce</label>
                <div class="col-sm-9">
                    @Html.DropDownListFor(x => x.IlcelerId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control", @style = "width:260px" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Telefon</label>
                <div class="col-sm-9">
                    <input style="width:150px;" type="text" class="form-control" name="TedTelefon" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Gsm</label>
                <div class="col-sm-9">
                    <input style="width:150px;" type="text" class="form-control" name="TedGsm" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">E-Posta</label>
                <div class="col-sm-9">
                    <input style="width:300px;" type="text" class="form-control" name="TedEposta" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Tedarik Tür</label>
                <div class="col-sm-9">
                    @Html.DropDownListFor(x => x.TedarikturId, (List<SelectListItem>)ViewBag.tList, "------- Seçiniz -------", new { @class = "form-control", @style = "width:200px" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Konu</label>
                <div class="col-sm-9">
                    <input style="width:400px;" type="text" class="form-control" name="TedKonu" />
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
            <button class="btn btn-info">Ekle</button>
        </div>
    </form>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#IllerId').change(function () {
            var IlId = $(this).val();
            var IlceL = $('#IlcelerId');
            IlceL.empty();
            $.ajax({
                url: '@Url.Action("IlceListe","Tedarikci")',
                type: 'POST',
                dataType: 'json',
                data: { 'IlId': IlId },
                success: function (data) {
                    $.each(data, function (index, option) {
                        IlceL.append('<option value=' + option.Value + '>' + option.Text + '</option>');
                    });
                }
            });
        });
    });
</script>