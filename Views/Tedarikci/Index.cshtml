@using SantiyeTakipOtomasyon.Models.Siniflar
@model List<Tedarikci>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br>

<div class="card card-default">
    <div class="card-header">
        <div class="row">
            <h5 class="card-title mb-sm-1 col-md-11">
                <strong>Tedarikçi İşlemleri</strong>
            </h5>
            <a href="#" class="btn btn-primary ekle col-md-1" data-target="@Url.Action("ModalAc", "Tedarikci")">Yeni Kayıt</a>
        </div>
    </div>
    <br />

    <div style="margin-left:1%; margin-right:1%">
        <table id="liste" class="table table-bordered table-hover table-sm" style="margin-top:20px">
            <thead>
                <tr class="warning">
                    <th style="width:3%">Firma Kodu</th>
                    <th style="width:20%">Firma</th>
                    <th style="width:20%">İlgili Kişi</th>
                    <th style="width:25%">Adres</th>
                    <th style="width:10%">Telefon</th>
                    <th style="width:10%">Gsm</th>
                    <th style="width:15%">E-posta</th>
                    <th style="width:5%">Tedarik Türü</th>
                    <th style="width:20%">Konu</th>
                    <th></th>
                </tr>
            </thead>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.TedKod</td>
                    <td>@t.TedFirma</td>
                    <td>@t.TedIlgiliKisi</td>
                    <td>@t.TedAdres @t.Ilceler.IlceAdi/@t.Iller.Sehir</td>
                    <td>@t.TedTelefon</td>
                    <td>@t.TedGsm</td>
                    <td>@t.TedEposta</td>
                    <td>@t.TedarikTur.TurAd</td>
                    <td>@t.TedKonu</td>
                    <td><a href="#" class="btn btn-success guncelle" data-target="@Url.Action("TedarikciGetir", "Tedarikci")/@t.TedarikciId">Güncelle</a></td>
                </tr>
            }
        </table>
    </div>

    <div class="container">
        <!--Modal -->
        <div class="modal fade" id="myModalE" role="dialog">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <!--Modal -->
        <div class="modal fade" id="myModalG" role="dialog">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />

<script type="text/javascript">
    $(function () {
        $("body").on("click", ".ekle", function () {
            var url = $(this).data("target");
            $.post(url, function (data) { })
                .done(function (data) {
                    $("#myModalE .modal-body").html(data);
                    $("#myModalE").modal("show");
                })
                .fail(function () {
                    $("#myModalE .modal-body").text("Hata!!");
                    $("#myModalE").modal("show");
                })
        });
    });
    $(function () {
        $("body").on("click", ".guncelle", function () {
            var url = $(this).data("target");
            $.post(url, function (data) { })
                .done(function (data) {
                    $("#myModalG .modal-body").html(data);
                    $("#myModalG").modal("show");
                })
                .fail(function () {
                    $("#myModalG .modal-body").text("Hata!!");
                    $("#myModalG").modal("show");
                })
        });
    });

    $('#liste').DataTable({
        "language": {

            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"

        }
    });
</script>
