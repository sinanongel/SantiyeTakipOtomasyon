@model SantiyeTakipOtomasyon.Models.Siniflar.TedarikTur

<div class="card card-default">
    <div class="card-header bg-dark">
        <div class="row">
            <h5 class="card-title mb-sm-1 col-md-11" style="color:white">
                <strong>Tedarik Tür Güncelleme</strong>
            </h5>
        </div>
    </div>
    <div class="container">
        <form action="@Url.Action("TedarikTurGuncelle", "TedarikTur")" method="post">
            <hr />
            @Html.HiddenFor(x => x.TedarikTurId)
            <div class="form-horizontal">
                <div class="container form-group-sm row">
                    <label class="col-form-label-sm col-md-4 text-right" style="color:red"><b>Tedarik Türü</b></label>
                    <div class="col-8">
                        @Html.TextBoxFor(x => x.TurAd, new { @class = "form-control", @style = "width:200px", @maxlength = "100" })
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
                    <button class="btn btn-success">Güncelle</button>
                </div>
            </div>
        </form>
    </div>
</div>