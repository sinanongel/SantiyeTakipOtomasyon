@using SantiyeTakipOtomasyon.Models.Siniflar
@model List<TedarikTur>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>TÜR ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.TedarikTurId</td>
            <td>@t.TurAd</td>
            <td><a href="@Url.Action("TedarikTurSil", "TedarikTur")/@t.TedarikTurId" class="btn btn-danger">Sil</a></td>
            <td><a href="#" class="btn btn-success guncelle" data-target="@Url.Action("TedarikTurGetir", "TedarikTur")/@t.TedarikTurId">Güncelle</a></td>
        </tr>
    }
</table>
<a href="#" class="btn btn-primary ekle" data-target="@Url.Action("ModalAc", "TedarikTur")">Yeni Kayıt</a>

<div class="container">
    <!--Modal -->
    <div class="modal fade" id="myModalE" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <!--Modal -->
    <div class="modal fade" id="myModalG" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("body").on("click", ".ekle", function () {
            var url = $(this).data("target");
            $.post(url, function (data) { })
                .done(function (data) {
                    $("#myModalE .modal-body").html(data);
                    $("#myModalE").modal("show");
                })
                .fail(function () {
                    $("#myModalE .modal-body").text("Hata!!");
                    $("#myModalE").modal("show");
                })
        });
    });
    $(function () {
        $("body").on("click", ".guncelle", function () {
            var url = $(this).data("target");
            $.post(url, function (data) { })
                .done(function (data) {
                    $("#myModalG .modal-body").html(data);
                    $("#myModalG").modal("show");
                })
                .fail(function () {
                    $("#myModalG .modal-body").text("Hata!!");
                    $("#myModalG").modal("show");
                })
        });
    });
</script>