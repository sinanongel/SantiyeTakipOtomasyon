@model SantiyeTakipOtomasyon.Models.Siniflar.Fatura

<div class="container p-2 bg-dark text-white">
    <form action="@Url.Action("FaturaGuncelle", "Fatura")" method="post">
        <div class="modal-header">
            <h5 class="modal-title">Fatura Güncelle</h5>
        </div>
        <br />
        @Html.HiddenFor(x => x.ProjeId, new { @value = ViewBag.proId })
        @Html.HiddenFor(x => x.FaturaId)
        <div style="margin-left:70px">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" st>Fatura Seri/Sıra No</label>
                <div class="col-sm-1">
                    @Html.TextBoxFor(x => x.FatSeri, new { @class = "form-control", @style = "width:50px;" })
                </div>
                <div class="col-sm-8">
                    @Html.TextBoxFor(x => x.FatSiraNo, new { @class = "form-control", @style = "width:80px;" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Fatura Tarihi</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.FatTarihi, "{0:yyyy-MM-dd}", new { @class = "form-control", @style = "width:160px;", @type = "date" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Firma/Şahıs</label>
                <div class="col-sm-9">
                    @Html.DropDownListFor(x => x.TedarikciId, (List<SelectListItem>)ViewBag.tList, new { @class = "form-control", @style = "width:400px" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Ödeme Şekli</label>
                <div class="col-sm-9">
                    @Html.DropDownListFor(x => x.OdemeSekliId, (List<SelectListItem>)ViewBag.oList, new { @class = "form-control", @style = "width:150px" })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Vazgeç</button>
            <button class="btn btn-success">Güncelle</button>
        </div>
    </form>
</div>
