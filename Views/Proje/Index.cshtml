@using SantiyeTakipOtomasyon.Models.Siniflar
@model List<Proje>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

<div class="card card-default">
    <div class="card-header">
        <div class="row">
            <h5 class="card-title mb-sm-1 col-md-11">
                <strong>Personel İşlemleri</strong>
            </h5>
            <a href="#" class="btn btn-primary ekle col-md-1" data-target="@Url.Action("ModalAc", "Proje")">Yeni Kayıt</a>
        </div>
    </div>

    <!--Proje Listesi-->

    @if (Model.Count() != 0)
    {
        <table class="table table-striped table-hover table-sm" style="margin-top:1%; margin-left:1%; width:98%">
            <tr>
                <th style="width:5%">Proje Id</th>
                <th style="width:20%">Proje Adı</th>
                <th style="width:15%">Proje Adres</th>
                <th style="width:20%">Müşavir</th>
                <th style="width:20%">Yapı Denetim</th>
                <th style="width:5%">Sözleşme Tarihi</th>
                <th style="width:5%">Yer Teslim Tarihi</th>
                <th style="width:10%">İşe Başlama Tarihi</th>
                <th style="width:5%">İşin Bitiş Tarihi</th>
                <th style="width:10%">Sözleşme Bedeli(TL)</th>
                <th style="width:10%">Proje Durum</th>
                <th></th>
            </tr>
            @foreach (var p in Model)
            {
                <tr>
                    <td class="bilgi" style="cursor:pointer;cursor:hand;" data-toggle="modal" data-target="@Url.Action("ProjeBilgi", "Proje")/@p.ProjeId">@p.ProjeId</td>
                    <td class="bilgi" style="cursor:pointer;cursor:hand;" data-toggle="modal" data-target="@Url.Action("ProjeBilgi", "Proje")/@p.ProjeId">@p.ProAdi</td>
                    <td class="bilgi" style="cursor:pointer;cursor:hand;" data-toggle="modal" data-target="@Url.Action("ProjeBilgi", "Proje")/@p.ProjeId">@p.ProAdres @p.Ilceler.IlceAdi/@p.Iller.Sehir</td>
                    <td class="bilgi" style="cursor:pointer;cursor:hand;" data-toggle="modal" data-target="@Url.Action("ProjeBilgi", "Proje")/@p.ProjeId">@p.ProMusavir</td>
                    <td class="bilgi" style="cursor:pointer;cursor:hand;" data-toggle="modal" data-target="@Url.Action("ProjeBilgi", "Proje")/@p.ProjeId">@p.ProYapiDenetim</td>
                    <td class="bilgi" style="cursor:pointer;cursor:hand;" data-toggle="modal" data-target="@Url.Action("ProjeBilgi", "Proje")/@p.ProjeId">@p.ProSozlesmeTarihi.ToString("dd.MM.yyyy")</td>
                    <td class="bilgi" style="cursor:pointer;cursor:hand;" data-toggle="modal" data-target="@Url.Action("ProjeBilgi", "Proje")/@p.ProjeId">@p.ProYerTeslimTarihi.ToString("dd.MM.yyyy")</td>
                    <td class="bilgi" style="cursor:pointer;cursor:hand;" data-toggle="modal" data-target="@Url.Action("ProjeBilgi", "Proje")/@p.ProjeId">@p.ProIseBaslamaTarihi.ToString("dd.MM.yyyy")</td>
                    <td class="bilgi" style="cursor:pointer;cursor:hand;" data-toggle="modal" data-target="@Url.Action("ProjeBilgi", "Proje")/@p.ProjeId">@p.ProIsinBitisTarihi.ToString("dd.MM.yyyy")</td>
                    <td class="bilgi" style="cursor:pointer;cursor:hand;text-align:right" data-toggle="modal" data-target="@Url.Action("ProjeBilgi", "Proje")/@p.ProjeId">@p.ProSozlesmeBedeli.ToString("N")</td>
                    <td class="bilgi" style="cursor:pointer;cursor:hand;" data-toggle="modal" data-target="@Url.Action("ProjeBilgi", "Proje")/@p.ProjeId">@p.ProDurum.Durum</td>
                    <td><a href="#" class="btn btn-success btn-sm guncelle" data-target="@Url.Action("ProjeGetir", "Proje")/@p.ProjeId">Güncelle</a></td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="card-body">
            <h3 style="color:red;">Boş!</h3>
        </div>
    }
</div>

<div class="container">
    <!--Proje Ekle Modal -->
    <div class="modal fade" id="myModalE" role="dialog">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <!--Proje Güncelle Modal -->
    <div class="modal fade" id="myModalG" role="dialog">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <!--Proje Bilgi Modal -->
    <div class="modal fade" id="myModalB" role="dialog">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("body").on("click", ".ekle", function () {
            var url = $(this).data("target");
            $.post(url, function (data) { })
                .done(function (data) {
                    $("#myModalE .modal-body").html(data);
                    $("#myModalE").modal("show");
                })
                .fail(function () {
                    $("#myModalE .modal-body").text("Hata!!");
                    $("#myModalE").modal("show");
                })
        });
    });
    $(function () {
        $("body").on("click", ".guncelle", function () {
            var url = $(this).data("target");
            $.post(url, function (data) { })
                .done(function (data) {
                    $("#myModalG .modal-body").html(data);
                    $("#myModalG").modal("show");
                })
                .fail(function () {
                    $("#myModalG .modal-body").text("Hata!!");
                    $("#myModalG").modal("show");
                })
        });
    });
    $(function () {
        $("body").on("click", ".bilgi", function () {
            var url = $(this).data("target");
            $.post(url, function (data) { })
                .done(function (data) {
                    $("#myModalB .modal-body").html(data);
                    $("#myModalB").modal("show");
                })
                .fail(function () {
                    $("#myModalB .modal-body").text("Hata!!");
                    $("#myModalB").modal("show");
                })
        });
    });
</script>