@using SantiyeTakipOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "PersonelPuantaj";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<div class="card bg-secondary text-white">
    <div class="card-body">Proje Adı : @ViewBag.projeId -  @ViewBag.proAd</div>
</div>
<br>

<div class="card card-default">
    <div class="card-header">
        <div class="row">
            <h5 class="card-title mb-sm-1 col-md-10">
                <strong>Personel İşlemleri</strong>
            </h5>
            @Html.DropDownList("selection", (List<SelectListItem>)ViewBag.aList, "Ay Seçin", new { @class = "form-control col-md-1", @style = "width:100%" })
            <a href="@Url.Action("PersonelPuantajOlustur", "Personel")/@ViewBag.projeId" class="btn btn-primary col-md-1" data-target="">Puantaj Oluştur</a>
        </div>
    </div>
    <br />

    <!--Personel Listesi-->

    @if (Model.Count() != 0)
    {
        <div style="margin-left:1%; margin-right:1%">
            <table id="liste" class="table table-bordered table-hover table-sm">
                <thead>
                    <tr>
                        <th style="width:5%">Id</th>
                        <th style="width:15%">Personel Adı</th>
                        <th style="width:20%">Görevi</th>
                    </tr>
                </thead>
                @foreach (var p in Model)
                {
                    <tr>
                        <td class="" style="cursor:pointer;cursor:hand;" data-toggle="" data-target="">@p.PersonelId</td>
                        <td class="" style="cursor:pointer;cursor:hand;" data-toggle="" data-target="">@p.PerAd @p.PerSoyad</td>
                        <td class="" style="cursor:pointer;cursor:hand;" data-toggle="" data-target="">@p.PerGorev</td>
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <div class="card-body">
            <h3 style="color:red;">Boş!</h3>
        </div>
    }
</div>

<div class="container">
    <!--Ekle Modal -->
    <div class="modal fade" id="myModalE" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <!--Güncelle Modal -->
    <div class="modal fade" id="myModalG" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <!--Bilgi Modal -->
    <div class="modal fade" id="myModalB" role="dialog">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css" rel="stylesheet" />

<script type="text/javascript">
    $(function () {
        $("body").on("click", ".ekle", function () {
            var url = $(this).data("target");
            $.post(url, function (data) { })
                .done(function (data) {
                    $("#myModalE .modal-body").html(data);
                    $("#myModalE").modal("show");
                })
                .fail(function () {
                    $("#myModalE .modal-body").text("Hata!!");
                    $("#myModalE").modal("show");
                })
        });
    });
    $(function () {
        $("body").on("click", ".guncelle", function () {
            var url = $(this).data("target");
            $.post(url, function (data) { })
                .done(function (data) {
                    $("#myModalG .modal-body").html(data);
                    $("#myModalG").modal("show");
                })
                .fail(function () {
                    $("#myModalG .modal-body").text("Hata!!");
                    $("#myModalG").modal("show");
                })
        });
    });
    $(function () {
        $("body").on("click", ".bilgi", function () {
            var url = $(this).data("target");
            $.post(url, function (data) { })
                .done(function (data) {
                    $("#myModalB .modal-body").html(data);
                    $("#myModalB").modal("show");
                })
                .fail(function () {
                    $("#myModalB .modal-body").text("Hata!!");
                    $("#myModalB").modal("show");
                })
        });
    });

    $('#liste').DataTable({
        "language": {

            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"

        }
    });
</script>
